<!-- views/pages/creation.ejs -->

<!DOCTYPE html>
<html lang="en">
<head>
    <%- include("../partials/head") %>
</head>

<% if (json.hasOwnProperty('dependencies')) { %>
    <body class="container" onload="initialize_dependencies()">
<% } else {%>
    <body class="container">
<% } %>

<header>
    <%- include("../ihm/electron/header") %>
</header>

<main>
    <div class="jumbotron">
        <%- include("../ihm/style") %>
        <form action="getParams" method="post" class="gpao-params">
        <div class=gpao-ihm>
            <div class=tabs>
                <% var electron='off' %>
                <% if (locals.electron) { %>
                <%    electron='on'; %>
                <% } %>
                <% console.log('electron:',electron)%>
                <% for(var myKey in json ) { %>
                 <%- include("../ihm/readJsonContent",{content:json[myKey],custom_style:'p',electron,electron}) %>
                <% } %>
                <% if (json.hasOwnProperty('dependencies')) { %>
                 <%- include("../ihm/buildDependencies", {dependencies:json['dependencies']}) %>
                <% } %>
             </div>
         </div>
         <% if (electron == 'on') { %>
            <%- include("../ihm/electron/filesaver.ejs", {id:'create-chantier',params:'gpao-params'}) %>
         <%} else { %>
            <button >Cr√©er le chantier</button>
         <% } %>
         </form>
    </div>
</main>

<footer>
    <%- include("../partials/footer") _%>
</footer>
</body>
</html>
